<Window
    Height="600"
    Title="Algorithm Visualizer"
    Width="800"
    mc:Ignorable="d"
    x:Class="AlgorithmVisualizer.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlgorithmVisualizer.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal">
            <ComboBox
                Margin="0,0,10,0"
                Width="150"
                x:Name="AlgorithmComboBox" />
            <TextBlock
                Text="Array Size:"
                VerticalAlignment="Center"
                Margin="0,0,5,0" />
            <TextBox
                Width="50"
                Text="20"
                x:Name="ArraySizeTextBox" />
            <Button
                Content="Generate Array"
                Margin="10,0,10,0"
                Width="100"
                x:Name="GenerateButton" />
            <Button
                Content="Play"
                Margin="0,0,10,0"
                Width="80"
                x:Name="PlayButton" />
            <Button
                Content="Pause"
                Margin="0,0,10,0"
                Width="80"
                x:Name="PauseButton" />
            <Button
                Content="Step"
                Margin="0,0,10,0"
                Width="80"
                x:Name="StepButton" />
            <Slider
                Maximum="100"
                Minimum="1"
                Value="50"
                Width="150"
                x:Name="SpeedSlider" />
        </StackPanel>

        <Canvas
            Background="Black"
            Grid.Row="1"
            Margin="10"
            x:Name="VisualizationCanvas" />

        <StackPanel
            Grid.Row="2"
            Margin="10"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,20,0"
                Text="Select an algorithm and generate array to start"
                x:Name="DescriptionText" />
            <TextBlock Text="" x:Name="StatsText" />
        </StackPanel>
    </Grid>
</Window>
